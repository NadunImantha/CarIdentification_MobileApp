<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvanceLevel"
    android:background="@drawable/background">

    <!--title-->
    <TextView
        android:id="@+id/advance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/gill_sans_heavy_bold"
        android:text="@string/advance_title_text"
        android:textColor="@color/title_white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--back btn-->
    <ImageButton
        android:id="@+id/advance_backBtn"
        android:layout_width="45dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="17dp"
        android:background="@color/transparent"
        android:contentDescription="@string/back_button_content_text"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn"
        android:onClick="backHome"/>

    <!--Score-->
    <TextView
        android:id="@+id/score_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/score"
        android:gravity="center_horizontal|center_vertical"
        android:fontFamily="@font/gill_sans_bold"
        android:text="@string/score_text"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--First Image-->
    <ImageView
        android:id="@+id/advance_imageView_1"
        android:layout_width="210dp"
        android:layout_height="117dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="62dp"
        android:contentDescription="@string/car_image_content_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_title" />
    <!--First image guess text-->
    <EditText
        android:id="@+id/advance_guess_plainText_1"
        android:layout_width="146sp"
        android:layout_height="43sp"
        android:layout_marginTop="98dp"
        android:autofillHints=""
        android:background="@drawable/guess_text_background"
        android:ems="10"
        android:fontFamily="@font/gill_sans_bold"
        android:gravity="center"
        android:hint="@string/guess_text"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toEndOf="@+id/advance_imageView_1"
        app:layout_constraintTop_toBottomOf="@+id/advance_title" />
    <!--First image correct name-->
    <TextView
        android:id="@+id/advance_carName_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gill_sans_bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/advance_imageView_1"
        app:layout_constraintTop_toBottomOf="@+id/advance_guess_plainText_1"/>


    <!--Second Image-->
    <ImageView
        android:id="@+id/advance_imageView_2"
        android:layout_width="210dp"
        android:layout_height="117dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/car_image_content_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_guess_plainText_1" />
    <!--Second image guess text-->
    <EditText
        android:id="@+id/advance_guess_plainText_2"
        android:layout_width="146sp"
        android:layout_height="43sp"
        android:layout_marginTop="64dp"
        android:background="@drawable/guess_text_background"
        android:ems="10"
        android:gravity="center"
        android:fontFamily="@font/gill_sans_bold"
        android:hint="@string/guess_text"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/advance_imageView_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_imageView_1"
        android:autofillHints="" />
    <!--Second image correct name-->
    <TextView
        android:id="@+id/advance_carName_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/yellow"
        android:fontFamily="@font/gill_sans_bold"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/advance_imageView_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_guess_plainText_2"/>

    <!--third image-->
    <ImageView
        android:id="@+id/advance_imageView_3"
        android:layout_width="210dp"
        android:layout_height="117dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/car_image_content_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_guess_plainText_2" />
    <!--Third image guess text-->
    <EditText
        android:id="@+id/advance_guess_plainText_3"
        android:layout_width="146sp"
        android:layout_height="43sp"
        android:layout_marginTop="64dp"
        android:background="@drawable/guess_text_background"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/guess_text"
        android:fontFamily="@font/gill_sans_bold"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/advance_imageView_3"
        app:layout_constraintTop_toBottomOf="@+id/advance_imageView_2"
        android:imeOptions="actionDone"
        android:autofillHints="" />
    <!--Third image correct name-->
    <TextView
        android:id="@+id/advance_carName_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/yellow"
        android:fontFamily="@font/gill_sans_bold"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/advance_imageView_3"
        app:layout_constraintTop_toBottomOf="@+id/advance_guess_plainText_3"/>


    <!--next button-->
    <Button
        android:id="@+id/advance_next_btn"
        android:layout_width="146sp"
        android:layout_height="43sp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_white_btn"
        android:fontFamily="@font/gill_sans_heavy_bold"
        android:onClick="nextBtn"
        android:text="@string/next_btn_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_imageView_3" />

    <!--submit button-->
    <Button
        android:id="@+id/advance_submit_btn"
        android:layout_width="146sp"
        android:layout_height="43sp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_blue_btn"
        android:fontFamily="@font/gill_sans_heavy_bold"
        android:onClick="submitBtn"
        android:text="@string/submit_btn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_imageView_3" />

    <!-- Description text view-->
    <TextView
        android:id="@+id/advance_text"
        android:layout_width="242sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/advance_description_text"
        android:textAlignment="center"
        android:textColor="@color/title_white"
        android:fontFamily="@font/gill_sans_heavy_bold"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_submit_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>